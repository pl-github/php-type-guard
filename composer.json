{
    "name": "plook/type-guard",
    "type": "library",
    "description": "Library to ensure correctness of types with a readable interface.",
    "license": "LGPL v2.1",
    "authors": [
        {
            "name": "Phillip Look",
            "email": "phillip-github@gmx-topmail.de"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "brainbits/phpcs-standard": "^7.0",
        "ergebnis/phpstan-rules": "^2.2.0",
        "thecodingmachine/phpstan-safe-rule": "^1.2.0",
        "thecodingmachine/phpstan-strict-rules": "^1.0.0",
        "phpstan/phpstan-phpunit": "^1.3.15",
        "squizlabs/php_codesniffer": "^3.8.1",
        "phpstan/phpstan": "^1.10.57",
        "phpunit/phpunit": "^11.0.2",
        "rector/rector": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Plook\\TypeGuard\\": "src/"
        },
        "files": [
            "src/Assert/functions.php",
            "src/Convert/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Plook\\Tests\\TypeGuard\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
